{
  "version": 2,
  "builds": [
    {
      "src": "src/main.ts",
      "use": "@vercel/node",
      "config": {
        "buildCommand": "prisma generate && nest build",
        "includeFiles": [
          "prisma/schema.prisma",
          "prisma/generated/**/*"
        ]
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "src/main.ts",
      "methods": [
        "GET",
        "POST",
        "PUT",
        "DELETE"
      ]
    }
  ],
  "env": {
    "PRODUCT_DATABASE_URL": "postgresql://postgres:vunguyen024@localhost:5432/product_db?schema=public"
  }
}